#!/usr/bin/env php
<?php

use RestApiBundle\Command\OpenApi\GenerateDocsCommand;
use Symfony\Component\Console\Application;

$files = [
    __DIR__.'/../vendor/autoload.php',
    __DIR__.'/../../../autoload.php',
];

foreach ($files as $file) {
    if (file_exists($file)) {
        require $file;

        break;
    }
}

$application = new Application();
$application->register(GenerateDocsCommand::getDefaultName());
$application->run();
