# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf

[*.{php,yml,yaml,json,xml,neon,md}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4

[Makefile]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
tab_width = 4